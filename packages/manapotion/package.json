{
  "name": "manapotion",
  "version": "0.15.1-alpha.0",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "dts": true,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "publint": "publint"
  },
  "dependencies": {
    "@manapotion/browser": "^0.15.1-alpha.0",
    "@manapotion/r3f": "^0.15.1-alpha.0",
    "@manapotion/react": "^0.15.1-alpha.0",
    "@manapotion/tailwind": "^0.15.1-alpha.0",
    "@manapotion/util": "^0.15.1-alpha.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "prettier": "^3.2.5",
    "publint": "^0.2.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3"
  }
}
