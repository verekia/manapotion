{
  "name": "manapotion-monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "cd examples/react && npm run dev",
    "dev-vue": "cd examples/vue && npm run dev",
    "dev-vanilla": "cd examples/vanilla && npm run dev",
    "clean": "rm -rf packages/*/dist",
    "build": "npm run build -w @manapotion/tailwind -w @manapotion/core -w @manapotion/vanilla -w @manapotion/react -w @manapotion/vue -w @manapotion/r3f",
    "publint": "npm run publint -ws",
    "typecheck": "npm run typecheck -ws",
    "format": "npm run format -ws",
    "format:check": "npm run format:check -ws",
    "pub": "npm run build && npm run publint && lerna publish",
    "check-all": "npm run typecheck && npm run format:check && npm run build && npm run publint",
    "pre-push": "npm run check-all",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.1.0",
    "commitlint": "^19.2.1",
    "husky": "^9.0.11",
    "lerna": "^8.1.2"
  }
}
